// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
generator db {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  is_tenant   Boolean   @default(false)
  locality_id Int
  locality    City      @relation(fields: [locality_id], references: [id])
  tickets     Ticket[]
  created     DateTime  @default(now())
  updated     DateTime  @updatedAt
  deleted     DateTime?
}

model City{
  id          Int       @id @default(autoincrement())
  name        String
  postal_code Int
  users       User[]
}

model Ticket{
  code        String    @id @default(uuid())
  tombola     Tombola   @relation(fields: [tombola_id], references: [id])
  tombola_id  Int
  user        User?      @relation(fields: [user_id], references: [id])
  user_id     Int?
  tombola_prize Tombola_Prize? @relation(fields: [tombola_prize_id], references: [id])
  tombola_prize_id Int?
}

model Tombola{
  id          Int       @id @default(autoincrement())
  start_date  DateTime
  end_date    DateTime
  tickets     Ticket[]
  tombola_prizes Tombola_Prize[]
  created     DateTime  @default(now())
  updated     DateTime  @updatedAt
  deleted     DateTime?
}

model Tombola_Prize{
  id          Int       @id @default(autoincrement())
  nb_available Int
  nb_won      Int       @default(0)
  tombola     Tombola   @relation(fields: [tombola_id], references: [id])
  tombola_id  Int
  prize       Prize     @relation(fields: [prize_id], references: [id])
  prize_id    Int
  tickets     Ticket[]
  created     DateTime  @default(now())
  updated     DateTime  @updatedAt
  deleted     DateTime?
}

model Prize{
  id          Int       @id @default(autoincrement())
  description String
  tombola_prizes Tombola_Prize[]
}
