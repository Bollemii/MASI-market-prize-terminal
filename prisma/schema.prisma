// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
generator db {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  passwrord String
  is_tenant Boolean
  created   DateTime @default(now())
  updated   DateTime @updatedAt
}

model City{
  id       Int      @id @default(autoincrement())
  name     String
  postal_code Int
}

model Ticket{
  code    String   @id @default(uuid())
  tombola Tombola  @relation(fields: [tombolaId], references: [id])
  tombolaId Int
}

model Tombola{
  id      Int      @id @default(autoincrement())
  name     String
  tickets  Ticket[]
  created  DateTime @default(now())
  updated  DateTime @updatedAt
  tombola_prizes Tombola_Prize[]
}

model Tombola_Prize{
  id      Int      @id @default(autoincrement())
  tombola Tombola  @relation(fields: [tombolaId], references: [id])
  tombolaId Int
  prize   Prize    @relation(fields: [prizeId], references: [id])
  prizeId Int
  created  DateTime @default(now())
  updated  DateTime @updatedAt
}

model Prize{
  id     Int      @id @default(autoincrement())
  description String
  tombola_prizes Tombola_Prize[]
}
